{% extends 'base.html.twig' %}

{% block body %}
    <h1>Course list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Begin</th>
                <th>End</th>
                <th>Title</th>
                <th>Candidatelimit</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td><a href="{{ path('course_show', { 'id': course.id }) }}">{{ course.id }}</a></td>
                <td>{% if course.begin %}{{ course.begin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if course.end %}{{ course.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ course.title }}</td>
                <td>{{ course.candidateLimit }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('course_show', { 'id': course.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('course_edit', { 'id': course.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
